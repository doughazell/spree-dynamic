@import 'store/variables';

$bsc_yellow: #CBCB67 !default;  /* Bespoke Silk Curtains Company yellow */

body {
  margin-top: 0px;
  background: url(/assets/store/luxury-kashmiri-silk-shawlsDARKER.jpg) top no-repeat;
  background-size: 100% 300px;
  
}

#main-nav-bar a {
  text-decoration: underline;
  color: $bsc_yellow;
}

// --------------------- Layout for product + summary pages --------------------
#content {
  margin-left: 80px;
  margin-top: 50px;
  width: 82%;
  
}

// ----------------------- BSC Logo -------------------------
#logo-block li {
  display: block;
  height: 25px;
}

#logo-header {
  font-size: 17px;
  text-transform: uppercase;
  color: white;
  line-height: 2.3em;
}

#logo-text {
  font-size: 20px;
  text-transform: uppercase;
  color: $bsc_yellow;
}

#logo-trailer {
  font-size: 11px;
  text-transform: uppercase;
  color: white;
}
// ------------------------------ Home page  -----------------------------------

nav#taxonomies {
  .taxonomy-root {
    border-bottom: $default_border;
    margin-bottom: 5px;
    font-size: $main_navigation_header_font_size;
  }

  .taxons-list {
    li {
      a {
        font-size: $main_navigation_font_size + 2;
        line-height: 1.5em;
      }
    }
  }
}

// Slight change from setting in 'screen.css.erb'
#sidebar {
  width: 160px;
}
/*
Multiline coments
