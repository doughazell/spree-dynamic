// --------------------- Layout for product + summary pages --------------------

// Currently used for both the listing pages and the dynamic price page
#content {
  margin-left: 80px;
  margin-top: 50px;
  width: 82%;
  
  //.columns.twelve.omega {
  //  margin-top: 100px;
  //}
}

#order_summary {
  hr {
    //margin-right: 50px;
