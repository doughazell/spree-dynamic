// ----------------------- BSC Logo -------------------------
#logo-block li {
  display: block;
  height: 25px;
}

#logo-header {
  font-size: 17px;
  text-transform: uppercase;
  color: white;
  line-height: 2.3em;
}

#logo-text {
  font-size: 20px;
  text-transform: uppercase;
  color: $bsc_yellow;
}

#logo-trailer {
  font-size: 11px;
  text-transform: uppercase;
  color: white;
}
// ------------------------------ Home page  -----------------------------------

nav#taxonomies {
  .taxonomy-root {
    border-bottom: $default_border;
    margin-bottom: 5px;
    font-size: $main_navigation_header_font_size;
  }

  .taxons-list {
    li {
      a {
        font-size: $main_navigation_font_size + 2;
        line-height: 1.5em;
      }
    }
  }
}

// Slight change from setting in 'screen.css.erb'
#sidebar {
  width: 152px;
}

#bsc-spree-link {
  margin-left: 20px;
  a {
    margin-left: 2px;
  }
}

// ------------------------------ Footer  -----------------------------------
#footer {
  //background: url(http://lorempixum.com/296/100/nature/2) bottom no-repeat;
  //background: url(/assets/store/sunset-on-the-beach.jpg) bottom no-repeat;
  background-color: $bsc_yellow;
  
  background-size: 100% 100%;
// "box-shadow: h-shadown v-shadow blur(opt) spread(opt) color(opt) inset(opt)"
  // ie No 'spread' and not "inset"
  box-shadow: 0 0 10px #000;
  margin-left: 2%;
  width: 96%;

  #nav ul li {
      //display: inline;
      list-style-type: none;
      text-align: center;
// "margin: top right bottom left"      
      margin: 0 0px 0 0;
      //margin-bottom: 130px;
  }
   
  #nav a {
      text-decoration: none;
  }
   
  #nav a:hover {
      text-decoration: underline;
  }
  
  #footer-one {
    width: 250px;
  }
  #footer-two {
    width: 320px;
  }
  #footer-three {
    width: 250px;
  }
  h4 {
    text-align:center;
    color: white;
  }

  // Stuff left in from "http://designshack.net/articles/css/build-a-responsive-mobile-friendly-web-page-with-skeleton/"
  #headerImage img {
    margin-bottom: 50px;
    max-width: 100%;
    height: auto;
  }
  .feature img {
    margin-bottom: 15px;
    max-width: 100%;
    height: auto;
  }
}

